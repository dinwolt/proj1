generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  nodes       Node[]
  elements    Element[]
}

model Node {
  id          Int       @id @default(autoincrement())
  name        String
  coordinates Json
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   Int
  elements    Element[] @relation("NodeToElement")

  @@unique([name, projectId])  
}
model Element {
  id        Int     @id @default(autoincrement())
  name      String  @default("el") 
  type      String
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  nodes     Node[]  @relation("NodeToElement")
  @@unique([name, projectId])  
}
